@model List<Web_ThietBiGiaoDuc.Models.LoaiSanPham>
@{
    ViewBag.Title = "Admin | Quản Lý Loại Sản Phẩm";
}

<div class="container">
    <div class="page-inner">
        <div class="d-flex align-items-left align-items-md-center flex-column flex-md-row pt-2 pb-4">
            <div>
                <h3 class="fw-bold mb-3">Quản Lý Loại Sản Phẩm</h3>
            </div>
        </div>
        <div class="card">
            <div class="card-header">
                <div class="d-flex align-items-center">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search..." aria-label="Search...">
                    </div>
                    <div class="input-group">
                        <a class="btn btn-primary btn-round ms-auto" href="/admin/loaisanpham/them">
                            <i class="fa fa-plus"></i>
                            Thêm Loại Sản Phẩm
                        </a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="add-row"
                           class="display table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Mã Loại SP</th>
                                <th>Tên Loại SP</th>
                                <th>Mã Danh Mục</th>
                                <th>Trạng Thái</th>
                                <th style="width: 10%">Xử Lý</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var loaiSP in @Model)
                            {
                                <tr>
                                    <td>@loaiSP.MaLoai</td>
                                    <td>@loaiSP.TenLoai</td>
                                    <td>@loaiSP.DanhMuc.TenDanhMuc</td>
                                    <td>@loaiSP.TrangThai</td>
                                    <td>
                                        <div class="form-button-action">
                                            <a href="/admin/loaisanpham/sua?maloai=@loaiSP.MaLoai"
                                                    data-bs-toggle="tooltip"
                                                    title=""
                                                    class="btn btn-link btn-primary btn-lg"
                                                    data-original-title="Edit Task">
                                                <i class="fa fa-edit"></i>
                                            </a>
                                            <button type="button"
                                                    data-bs-toggle="tooltip"
                                                    title=""
                                                    class="btn btn-link btn-danger"
                                                    data-original-title="Remove">
                                                <i class="fa fa-times"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-center">
                            <li class="page-item disabled">
                                <a class="page-link">Previous</a>
                            </li>
                            <li class="page-item active" aria-current="page"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item">
                                <a class="page-link" href="#">Next</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
