@{
    ViewBag.Title = "Thêm phiếu nhập";
}

<div class="container">
    <div class="page-inner">
        <div class="card">
            <div class="card-header">
                <div class="card-title">Thông Tin Phiếu Nhập</div>
            </div>
            <div class="card-body">
                <form>
                    <!-- Thông tin chung về phiếu nhập -->
                    <div class="d-flex justify-content-between">
                        <div class="col-md-2 mb-3 px-2">
                            <label for="MaPhieuNhap" class="form-label">Phiếu Nhập</label>
                            <input type="text" class="form-control" id="MaPhieuNhap" placeholder="PN003" disabled required>
                        </div>
                        <div class="col-md-3 mb-3 px-2">
                            <label for="NhaCungCap" class="form-label">Nhà Cung Cấp</label>
                            <select id="NhaCungCap" class="form-control" required>
                                <option value="ncc01">Nhà Cung Cấp 01</option>
                                <option value="ncc02">Nhà Cung Cấp 02</option>
                                <!-- Thêm các nhà cung cấp khác -->
                            </select>
                        </div>
                        <div class="col-md-3 mb-3 px-2">
                            <label for="NgayNhapHang" class="form-label">Ngày Nhập Hàng</label>
                            <input type="date" class="form-control" id="NgayNhapHang" required>
                        </div>
                    </div>

                    <!-- Bảng nhập chi tiết sản phẩm -->
                    <h4>Chi Tiết Sản Phẩm</h4>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Mã sản phẩm</th>
                                <th>Tên sản phẩm</th>
                                <th>Số lượng</th>
                                <th>Đơn giá</th>
                                <th>Thành tiền</th>
                                <th>Xử lí</th>
                            </tr>
                        </thead>
                        <tbody id="productTableBody">
                            <tr>
                                <td><input type="text" class="form-control" placeholder="SP001" disabled required></td>
                                <td>
                                    <select name="order-status" aria-controls="basic-datatables" class="form-control" style="width:200px">
                                        <option value="processing" class="text-dark"></option>
                                        <option value="shipping" class="text-primary">Bộ Bàn Ghế Giáo Viên</option>
                                        <option value="return-processing" class="text-warning">Đang xử lý đổi trả</option>
                                        <option value="delivered" class="text-success">Giao hàng thành công</option>
                                        <option value="failed" class="text-danger">Giao hàng không thành công</option>
                                    </select>
                                </td>
                                <td><input type="number" class="form-control" placeholder="Số lượng"></td>
                                <td><input type="number" class="form-control" placeholder="Đơn giá"></td>
                                <td><input type="text" class="form-control" placeholder="Tính tự động" disabled></td>
                                <td><button type="button" class="btn btn-danger" onclick="removeRow(this)">Xóa</button></td>
                            </tr>
                        </tbody>
                    </table>
                    <button type="button" class="btn btn-primary" onclick="addProductRow()">Thêm sản phẩm</button>

                    <!-- Nút xác nhận -->
                    <div class="mt-3">
                        <button type="submit" class="btn btn-success">Lưu Phiếu Nhập</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function addProductRow() {
        const tableBody = document.getElementById('productTableBody');
        const newRow = document.createElement('tr');
        newRow.innerHTML = `
            <td><input type="text" class="form-control" placeholder="SP002"></td>
            <td><input type="text" class="form-control" placeholder="Tên sản phẩm"></td>
            <td><input type="number" class="form-control" placeholder="Số lượng"></td>
            <td><input type="number" class="form-control" placeholder="Đơn giá"></td>
            <td><input type="text" class="form-control" placeholder="Tính tự động" disabled></td>
            <td><button type="button" class="btn btn-danger" onclick="removeRow(this)">Xóa</button></td>
        `;
        tableBody.appendChild(newRow);
    }

    function removeRow(button) {
        button.closest('tr').remove();
    }
</script>
